<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="110dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/bookImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_menu_book_round" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/text_status"
                        android:text="Tên sách"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Status"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:background="@color/purple_500"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_borrow_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mượn: 20/10/2023"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/text_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hạn: 03/11/2023"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_return"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Trả sách"
                android:textSize="11sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="6dp"
                android:backgroundTint="#FF5983"
                android:layout_marginEnd="6dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_renew"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Gia hạn"
                android:textColor="#6200EE"
                android:textSize="11sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="6dp"
                android:backgroundTint="#E8D9F4"
                android:layout_marginEnd="6dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Chi tiết"
                android:textSize="11sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="6dp"
                android:backgroundTint="#00BCD4"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>