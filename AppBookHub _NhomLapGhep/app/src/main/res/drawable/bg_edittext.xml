<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền -->
    <solid android:color="#FFFFFF"/>

    <!-- Bo góc -->
    <corners android:radius="12dp"/>

    <!-- Viền nhạt -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Padding bên trong -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp" />

</shape>
