<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <!-- HEADER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="320dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_header_gradient">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_avatar"
                android:padding="18dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_user" />

            <!-- Name -->
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgAvatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Nguyễn Văn A"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Email -->
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtName"
                android:layout_centerHorizontal="true"
                android:text="nguyenvana@email.com"
                android:textColor="#EDEDED"
                android:textSize="14sp" />

            <!-- Stats Row -->
            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEmail"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <!-- Borrowed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sách đã mượn"
                        android:textColor="#EDEDED"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Read -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sách đã đọc"
                        android:textColor="#EDEDED"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Days -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="42"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày đọc"
                        android:textColor="#EDEDED"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Edit profile button MUST BE OUTSIDE statsRow -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statsRow"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_edit_btn"
                android:text="Chỉnh sửa hồ sơ"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingLeft="26dp"
                android:paddingTop="8dp"
                android:paddingRight="26dp"
                android:paddingBottom="8dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- MENU BLOCK -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/menuBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#FFFFFF">

            <!-- ITEM 1: INFO -->
            <LinearLayout
                android:id="@+id/itemInfo"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_user"
                    app:tint="#6F6F6F"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:text="Thông tin cá nhân"
                    android:textColor="#333333"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iconInfoArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#6F6F6F"/>
            </LinearLayout>

            <!-- SUBMENU INFO -->
            <LinearLayout
                android:id="@+id/subMenuInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#F7F7F7">

                <TextView
                    android:id="@+id/subProfile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="Hồ sơ cá nhân"/>

                <TextView
                    android:id="@+id/subPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="Thay đổi mật khẩu"/>

                <TextView
                    android:id="@+id/subNotification"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="Cài đặt thông báo"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <!-- ITEM 2 -->
            <LinearLayout
                android:id="@+id/itemFavorite"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_book"
                    app:tint="#6F6F6F"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:text="Sách yêu thích"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <!-- ITEM 3: HISTORY -->
            <LinearLayout
                android:id="@+id/itemHistory"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_history"
                    app:tint="#6F6F6F"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:text="Lịch sử"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iconHistoryArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#6F6F6F"/>
            </LinearLayout>

            <!-- SUBMENU HISTORY -->
            <LinearLayout
                android:id="@+id/subMenuHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"
                android:background="#F7F7F7">

                <TextView
                    android:id="@+id/subReadHistory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="Lịch sử đọc"/>

                <TextView
                    android:id="@+id/subBorrowHistory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="Lịch sử mượn"/>

                <TextView
                    android:id="@+id/subRatedBooks"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="Sách đã đánh giá"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <!-- ITEM 4 SETTINGS -->
            <LinearLayout
                android:id="@+id/itemSettings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_settings"
                    app:tint="#6F6F6F"/>

                <TextView
                    android:text="Cài đặt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <!-- ITEM 5 HELP -->
            <LinearLayout
                android:id="@+id/itemHelp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_help"
                    app:tint="#6F6F6F"/>

                <TextView
                    android:text="Trợ giúp &amp; hỗ trợ"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <!-- ITEM 6 ABOUT -->
            <LinearLayout
                android:id="@+id/itemAbout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_info"
                    app:tint="#6F6F6F"/>

                <TextView
                    android:text="Về BookHub"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <!-- ITEM 7 LOGOUT -->
            <LinearLayout
                android:id="@+id/itemLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_logout"
                    app:tint="#E53935"/>

                <TextView
                    android:text="Đăng xuất"
                    android:textColor="#E53935"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
