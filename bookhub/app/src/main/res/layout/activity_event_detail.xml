<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    tools:context=".EventDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/gradient_header"
                android:padding="24dp">

                <TextView
                    android:id="@+id/event_title_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuần lễ Sách Mới"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ưu đãi lớn cho độc giả"
                    android:textColor="#EFEFEF"
                    android:textSize="16sp"
                    android:alpha="0.8"
                    android:layout_below="@id/event_title_detail"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/rounded_top_white_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả sự kiện"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_app"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/event_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey"
                    android:lineSpacingExtra="4dp"
                    android:text="Đây là mô tả chi tiết của sự kiện Tuần lễ Sách Mới..."/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout style="@style/DetailRowStyle">
                            <TextView style="@style/DetailLabelStyle" android:text="Thời gian:"/>
                            <TextView style="@style/DetailValueStyle" android:text="20/11/2023 - 27/11/2023" android:textStyle="bold"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider_grey"/>

                        <LinearLayout style="@style/DetailRowStyle">
                            <TextView style="@style/DetailLabelStyle" android:text="Mức ưu đãi:"/>
                            <TextView style="@style/DetailValueStyle" android:text="Giảm 15%" android:textColor="@color/primary_color" android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký tham gia ngay"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        android:padding="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        app:cornerRadius="14dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>