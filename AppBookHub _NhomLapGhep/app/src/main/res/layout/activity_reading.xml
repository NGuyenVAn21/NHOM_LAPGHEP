<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header với gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/gradient_bg"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <TextView
            android:id="@+id/tvScreenTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đọc sách"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_search"
                app:tint="@color/white"
                android:background="@drawable/icon_button_bg" />

            <ImageButton
                android:id="@+id/btnNotification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notifications"
                app:tint="@color/white"
                android:background="@drawable/icon_button_bg"
                android:layout_marginStart="12dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Nội dung đọc sách -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <!-- Header của màn hình đọc -->
        <LinearLayout
            android:id="@+id/readingHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_bg"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white"
                android:background="@drawable/back_button_bg" />

            <TextView
                android:id="@+id/tvChapterTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhà Giả Kim - Chương 1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btnBookmark"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_bookmark_border"
                app:tint="@color/white"
                android:background="@drawable/back_button_bg" />

        </LinearLayout>

        <!-- Nội dung sách -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/readingHeader"
            android:padding="24dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chapter1_content"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.8" />

        </ScrollView>

    </RelativeLayout>

    <!-- Controls ở bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnPrevChapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chương trước"
            android:textColor="@color/white"
            android:background="@drawable/button_gradient"
            android:drawableStart="@drawable/ic_navigate_before"
            app:drawableTint="@color/white"
            android:enabled="false"
            style="@style/ReadingButton" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnNextChapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chương tiếp"
            android:textColor="@color/white"
            android:background="@drawable/button_gradient"
            android:drawableEnd="@drawable/ic_navigate_next"
            app:drawableTint="@color/white"
            style="@style/ReadingButton" />

    </LinearLayout>

</LinearLayout>